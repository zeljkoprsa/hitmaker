{
  "format": "custom",
  "id": "blog_post",
  "label": "Blog Post",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "title": {
        "type": "Text",
        "config": {
          "label": "Title",
          "placeholder": "Blog post title"
        }
      },
      "publication_date": {
        "type": "Date",
        "config": {
          "label": "Publication date",
          "placeholder": ""
        }
      },
      "description": {
        "type": "StructuredText",
        "config": {
          "label": "Blog post description",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "strong,em,hyperlink,rtl"
        }
      },
      "featured_image": {
        "type": "Image",
        "config": {
          "label": "Featured image",
          "constraint": {},
          "thumbnails": []
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "quote": {
              "type": "SharedSlice"
            },
            "list": {
              "type": "SharedSlice"
            },
            "image": {
              "type": "SharedSlice"
            },
            "text": {
              "type": "SharedSlice"
            },
            "heading": {
              "type": "SharedSlice"
            }
          }
        }
      }
    }
  }
}
